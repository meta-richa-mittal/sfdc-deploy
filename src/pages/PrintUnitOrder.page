            }
            .customer-info-container .customer-info-section .second-container p .width100 {
                width: 100%;
            }
            .customer-other-info {
                margin-bottom: 3px;
                line-height: 10px;
                font-weight: normal;
            }
            .customer-info-container .customer-info-section .second-container p  .customer-other-info .email-container {
                width: 90px;
            }
            .invoice-info .extra-label {
                height: 11px;
                width: 210px;
                display: block;
                margin-bottom: 8px;
            }
            .M0 {
                margin: 0px !important;
            }
            .invoice-info p {
                line-height: 10px;
                width: 200px !important;
            }
            .bold {
                font-weight: bold;
            }
            .invoice-info p.tax-heading {
                width: auto;
                font-weight: 600;
                font-size: 12px;
                line-height: 14px;
                color: #000;
                text-transform: uppercase;
                margin-bottom: 4px;
            }
            .invoice-info p.tax-heading .invoice-number {
                padding-left: 5px;
            }
            .invoice-info p .date-container {
                width: 210px;
                display: block;
            }
            .PL2 {
                padding-right: 2px;
            }
            .main-section-container {
                width: 100%;
            }
            .merchandise-header {
                width: 100%;
                padding-bottom: 2px;
                font-size: 12px!important;
            }
            .vendor-unit-info-header {
                padding: 5px 10px;
                border: 1px solid #DADFE6;
                margin-bottom: 2px;
            }
            .c-header {
                display: block;
                width: 100%;
                font-size: 12px;
                font-weight: 600;
                line-height: 13px;
                color: #000;
                text-transform: uppercase;
            }
            .table-container {
                position: relative;
                left: 40px;
            }
            .c-text-align-right {
                text-align: right !important;
            }
            .table-container table thead tr th {
                font-weight: 600;
                font-size: 11px;
                line-height: 11px;
                color: #000; 
                text-transform: capitalize;
                padding-top: 15px;
                padding-bottom: 9px;
            }
        .table-container table tbody tr td {
            font-size: 11px;
            vertical-align: top;
        }
        .table-container table.vendor-unit-table tbody tr td.unit-details-label {
            font-weight: 600;
            width: 80px;
        }
        .table-container table.vendor-unit-table tbody tr td >div.unit-details-container>span {
            width: 100%;
        }
        .table-container table.vendor-unit-table tbody tr td >div.unit-details-container>span .c-label-text {
            color: #000;
            line-height: 160%;
            width: 110px;
            display: block;
            text-align: right;
            padding: 2px 18px 2px 0px;
        }
        .table-container table.vendor-unit-table tbody tr td >div.unit-details-container>span .c-value-text {
            line-height: 160%;
            color: #000;
            width: 468px;
            display: block;
            padding: 2px 0px;
        }
        .table-container table.vendor-order-cost-table thead tr th {
            font-weight: 600;
            font-size: 11px;
